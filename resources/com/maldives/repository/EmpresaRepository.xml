<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maldives.repository.EmpresaRepository">

 <resultMap id = "result" type = "com.maldives.model.Empresa">
   <result property = "idEmpresa" column = "IDEMPRESA"/>
   <result property = "nmEmpresa" column = "NMEMPRESA"/>
   <result property = "deEmail" column = "DEMAIL"/>
   <result property = "cdRamoAtividade" column = "CDRAMOATIVIDADE"/>
 </resultMap>

  <insert id = "insert" parameterType = "com.maldives.model.Empresa">
  	  INSERT INTO EMPRESA (nmEmpresa, deEmail, cdRamoAtividade) VALUES (#{nmEmpresa},#{deEmail},#{cdRamoAtividade});
   </insert>
   
   <select id="findByEmail" parameterType="String" resultType="com.maldives.model.Empresa">
   		SELECT e.idEmpresa, e.deEmail, e.cdRamoAtividade, e.nmEmpresa from EMPRESA e WHERE e.deEmail = #{deEmail};
   </select>
</mapper>